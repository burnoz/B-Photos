<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:B_Photos.Helpers"
             x:Class="B_Photos.Views.GalleryView"
             xmlns:models="clr-namespace:B_Photos.Models"
             xmlns:viewmodels="clr-namespace:B_Photos.ViewModels"
             x:DataType="viewmodels:GalleryViewModel"
             Title="GalleryView">

    <CollectionView ItemsSource="{Binding Photos}"
                RemainingItemsThreshold="3"
                RemainingItemsThresholdReachedCommand="{Binding LoadMorePhotosCommand}">

        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="{OnPlatform Android=3, WinUI=5}" />
        </CollectionView.ItemsLayout>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Photo">
                <Image Source="{Binding ImageThumbnailURL}" 
                       Aspect="AspectFill" 
                       HeightRequest="130">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer 
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:GalleryViewModel}}, Path=NavigateToPhotoDetailCommand}"
                            CommandParameter="{Binding .}" />
                    </Image.GestureRecognizers>
                </Image>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.Footer>
            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                           IsVisible="{Binding IsLoading}"
                           HorizontalOptions="Center" />
        </CollectionView.Footer>
    </CollectionView>

</ContentPage>